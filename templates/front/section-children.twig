<section class="section front-section-children">
	<div class="container">
		{{siteMacros.titleSection(post.get_field('section_children_title'))}}
		<div class="row front-section-children__row">
			{% for child in post.get_field('section_children_cases') %}
				{{
					siteMacros.case(
					'col-12 col-sm-6 col-md-3',
					TimberImage(child.thumbnail).src,
					child.title,
					child.age,
					child.city,
					child.description,
					child.link) 
				}}
			{% endfor %}
		</div>
	</div>
</section>