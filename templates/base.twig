                {{language_switcher}}
              </div>
            </nav>
            <div class="nav__addition col-5 col-md-2" id="js-nav-addition">
              <a href="{{options.btn_nav_link}}" class="btn btn_brand-1 effect effect_bounce-top nav__addition-btn">{{options.btn_nav_text}}</a>
